{% extends 'base.html.twig' %}

{% block body %}
    {% if isOk %}
        <div class="alert alert-dismissible alert-success">
            <h2>The artcile have benn created succefully!</h2>
        </div>
    {%  endif %}
        <h2 style="text-align: center">Add an article</h2>
        {{ form_start(articleForm) }}
        {{ form_row(articleForm.title, {
            'label': "Title",
            'attr': {
                class: "form-control"
            }
        }) }}
        {{ form_row(articleForm.content, {
            'label': "Content",
            'attr': {
                class: "form-control"
            }
        }) }}
        {{ form_rest(articleForm) }}
        <br>
        <button type="submit" class="btn btn-lg btn-primary">Create an article</button>
        {{ form_end(articleForm) }}
{% endblock %}